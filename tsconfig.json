{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES6",
    "rootDir": "./packs/BP/scripts_dev/",
    "outDir": "./packs/BP/scripts/",
    "strict": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": false,
    "baseUrl": "./"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}